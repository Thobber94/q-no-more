<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.bergby.qnomore.fragments.SpecificOrderFragment">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/specificOrderRestaurant"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="36sp"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/specificOrderRestaurant"
            android:layout_centerHorizontal="true">

        <TextView
                android:text="@string/specificOrderItemExample"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:id="@+id/specificOrderItems"
                android:textSize="24sp"
                />

    </ScrollView>
</RelativeLayout>
